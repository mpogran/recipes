- if current_user
  .col-container.marg-l.white.rd.sdw.pad-sm.single-pane{'ng-controller' => "browser"}
    #cur_list.file-container.fill-h
      .actions
        #new_dir.icn-new-dir.action= 'New Folder'
        #new_rec.icn-new-rec.action= 'New Recipe'
      %ul.file{'ng-init' => "dirId=#{@container.id}"}
        %li{'ng-repeat' => 'item in items', class: "pad-sm {{ item.itemable_type }}"}
          = "{{ item.itemable_name }}"
    #cur_recipe.fill-h
      %div{'ng-include' => 'recipeView'}
